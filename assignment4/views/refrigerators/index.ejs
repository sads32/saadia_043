<!-- views/refrigerators/index.ejs -->
<link rel="stylesheet" type="text/css" href="/stylesheets/ref.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

<h1>Refrigerators</h1>

<% if (isAdmin) { %>
  <a style="text-decoration: none; color: blueviolet; font-size: 20px;" href="/refrigerators/new">Add New Refrigerator</a>
<% } %>

<ul class="unorder">
  <% refrigerators.forEach((refrigerator) => { %>
    <li class="list">
      <img src="<%= refrigerator.picture %>" alt="Refrigerator Image">
      <h3><%= refrigerator.title %></h3>
      <p>Price: <%= refrigerator.price %></p>

      <% if (isAdmin) { %>
        <a style="text-decoration: none;" href="/refrigerators/<%= refrigerator._id %>/edit">Edit</a>
        <form method="POST" action="/refrigerators/<%= refrigerator._id %>?_method=DELETE">
          <button type="submit">Delete</button>
        </form>
      <% } %>
    </li>
  <% }) %>
</ul>
