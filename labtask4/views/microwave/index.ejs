<!-- views/microwaves/index.ejs -->
<link rel="stylesheet" type="text/css" href="/stylesheets/ref.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

<h1>Microwaves</h1>

<% if (isAdmin) { %>
  <a style="text-decoration: none; color: blueviolet; font-size: 20px;" href="/microwaves/new">Add New Microwave</a>

  <% } %>

<ul class="unorder">
  <% microwaves.forEach((microwave) => { %>
    <li class="list">
      <img src="<%= microwave.picture %>" alt="microwave Image">
      <h3><%= microwave.title %></h3>
      <p>Price: <%= microwave.price %></p>
      <% if (isAdmin) { %>
        <a style="text-decoration: none;" href="/microwaves/<%= microwave._id %>/edit">Edit</a>
        <form method="POST" action="/microwaves/<%= microwave._id %>?_method=DELETE">
          <button type="submit">Delete</button>
        </form>
        <% } %>
    </li>
  <% }) %>
</ul>
