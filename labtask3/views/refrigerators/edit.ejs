<link rel="stylesheet" type="text/css" href="/stylesheets/new.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

<h1 style="text-align: center;">Edit Refrigerator</h1>

<form method="POST" action="/refrigerators/<%= refrigerator._id %>?_method=PUT" class="column-form">
  <label for="picture">Picture URL:</label>
  <input type="text" id="picture" name="picture" value="<%= refrigerator.picture %>" required>

  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= refrigerator.title %>" required>

  <label for="price">Price:</label>
  <input type="number" id="price" name="price" value="<%= refrigerator.price %>" required>

  <button type="submit">Update Refrigerator</button>
</form>
