<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

<h1>Edit Microwave Oven</h1>

<form action="/microwaves/<%= microwave._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="picture" class="form-label">Picture</label>
    <input type="text" class="form-control" id="picture" name="picture" value="<%= microwave.picture %>">
  </div>
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= microwave.title %>">
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Price</label>
    <input type="text" class="form-control" id="price" name="price" value="<%= microwave.price %>">
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>
